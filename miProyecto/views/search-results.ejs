<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%  for(let i=0; i<perroArray.length; i++){  let perros = perroArray[i] %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= perros.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= perros.img %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2> <%=perros.nombre%> </h2>
								<p> <%=perros.descripcion%> </p>
								<p> <%=perros.años%> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %>


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>

</html>