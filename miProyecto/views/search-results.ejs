<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<% if(locals.usuario) { %> 
		<%- include('./partials/headerLogueado')%>
	<% } else { %> 
		<%- include('./partials/header') %> 
	<% } %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%  for(let i=0; i<respuesta.length; i++){  let rescatado = respuesta[i] %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= rescatado.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%= rescatado.imagen %>" alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2> <%=rescatado.nombre%> </h2>
								<p> <%=rescatado.descripcion%> </p>
							</article>
						</a>
					</section>
				</div>
				<% } %>


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>

</html>