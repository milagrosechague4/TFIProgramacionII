<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/PetFinder_logo.jpeg" />
	
	<title>PetFinder</title>
			<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./css/app.css">
</head>
<body>
	<!-- Header --> 
	<!-- ponerlo en tdoos menos en el header logeado, borrando el header--> 
	<%- include('./partials/header')%>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%  for(let i=0; i<perrosArray.length; i++){  let perros = perrosArray[i] %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product/<%= perros.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%= perros.img %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2> <%=perros.nombre%> </h2>
							<p> <%=perros.descripcion%> </p>
							<p> <%=perros.años%> </p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%  for(let i=0; i<gatosArray.length; i++){  let gatos = gatosArray[i] %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/product">
						<article class="product-box_data">
							<figure class="product-box_image">
								<img class= "w-100" src="/images/products/<%= gatos.img %>" alt="cafetera moulinex">
							</figure>
							<h2><%= gatos.nombre %></h2>
							<p><%= gatos.descripcion %> </p>
							<p><%= gatos.años %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>	
</html>