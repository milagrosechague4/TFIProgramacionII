<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="container">
				<div class="formulario">   
					<div class="titulo">
						<h2 class="products-title">Edita tu perfil</h2>
					</div>
					<div> 		
						<form action="/users/edit" method="POST" class="col-6" enctype="multipart/form-data">
		
							<div class="filas">
								<div class="fila">
									<label>
										Nombre <span class="req">*</span>
									</label>
									<input type="text" name="nombre" value="<%= usuario.nombre%>" />
								</div>	
								<div class="fila">
									<label for="apellido">
										Apellido <span class="req">*</span>
									</label>
									<input type="text" name="apellido" value="<%= usuario.apellido%>">
								</div>
								<div class="fila2">
									<label>
										Imagen <span class="req">*</span>
									</label>
									<input type="file" name="imagen" accept="image/png, image/jpeg"/>
								</div>
								<input type="hidden"  name="oldImagen"  value="<%=usuario.imagen%>">
								<div class="fila">
									<label>
											AÃ±o de nacimiento <span class="req">*</span>
									</label>
									<input type="number" name="fechaNacimiento"/>
								</div>
								<input type="hidden"  name="oldFecha"  value="<%=usuario.fechaNacimiento%>">
								<div class="fila">
									<label>
										Email Address<span class="req">*</span>
									</label>
									<input type="email" name="email" value="<%= usuario.email %>"/>
								</div>
								<input type="hidden" name="id" value="<%= usuario.id %>">
							</div>
							<p class="boton">			
							<button type="submit" class="button button-block"> Empecemos </button>
							</p>		
						</form>
					</div>	
				</div>	
					
			</div>
		
	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>

</html>