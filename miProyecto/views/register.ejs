<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head')%>

<body>
	<!-- Header -->
	<%- include('./partials/header')%>
	<!-- /Header -->

	<div class="container">
		<div class="formulario">   
			<div class="titulo">
				<h2 class="products-title">Registrate</h2>
			</div>
			<div> 		
				<form action="/users/register" method="POST" class="col-6">

					<div class="filas">
						<div class="fila">
							<label for="nombre">
								Nombre Completo<span class="req">*</span>
							</label>
							<input type="text" id="nombre" name="nombre" required>
						</div>	
						<div class="fila">
							<label for="adn">
									Año de nacimiento <span class="req">*</span>
							</label>
							<input type="number" id="adn" name="adn"  required>
						</div>
						<div class="fila">
							<label for="email">
								Email Address<span class="req">*</span>
							</label>
							<input type="email" id="email" name="email"required>
						</div>
						<div class="fila">
							<label for="password">
								Crea tu contraseña<span class="req">*</span>
							</label>
							<input type="password" id="password" name="password" required>
						</div>
					</div>
					<p class="boton">			
					<button type="submit" class="button button-block"> Empecemos </button>
					</p>		
				</form>
			</div>	
		</div>	
			
	</div>

	<!-- footer -->
	<%- include('./partials/footer')%>
	<!-- /footer -->
</body>

</html>